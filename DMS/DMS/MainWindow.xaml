        </Button>

        <Button x:Name="chat_Button" HorizontalAlignment="Left" Margin="25,556,0,0" VerticalAlignment="Top" Foreground="{x:Null}" BorderBrush="{x:Null}" Click="chat_click" Width="133" Height="48">

            <Button.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="OverridesDefaultStyle"
                                Value="True" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border"
                                            BorderThickness="0"
                                            Padding="5"
                                            BorderBrush="{x:Static SystemColors.ControlLightBrush}"
                                            Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Resources>
            <Button.Background>
                <ImageBrush ImageSource="Resources/chat.png" RenderOptions.BitmapScalingMode="HighQuality" Stretch="None" Opacity="0.77"/>
            </Button.Background>

        </Button>
        <Image HorizontalAlignment="Left" Height="44.55" Margin="240,25,0,0" VerticalAlignment="Top" Width="44.55" Source="Resources/search.png"/>


        <Border BorderThickness="1" HorizontalAlignment="Left" Height="80" Margin="0,102,0,0" VerticalAlignment="Top" Width="210" Background="#7FFFFFFF" x:Name="mark_Border"/>

        <TextBox HorizontalAlignment="Left" Height="32" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" Margin="315,32,0,0" FontFamily="Noto Sans CJK KR" FontSize="22" BorderBrush="{x:Null}" SelectionBrush="{x:Null}" Background="{x:Null}" Foreground="Black" Name="search_TextBox" PreviewMouseDown="textbox1_MouseDown" Text="학번 또는 이름 입력" BorderThickness="0"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="569" Margin="244,186,0,0" VerticalAlignment="Top" Width="582" Background="White" CornerRadius="16">

            <ListView x:Name="SearchList_Copy"
                Background="#ffffff"
                Margin="9.2,9.2,9.6,74"
                SelectionMode="Multiple"
                VerticalAlignment="Stretch"
                TextElement.FontSize="16">
                <ListView.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="BorderThickness" Value="1" />
                        <Setter Property="CornerRadius" Value="9. 9, 0, 0" />
                    </Style>
                </ListView.Resources>
                <ListView.View>
                    <GridView AllowsColumnReorder="True">
                        <GridViewColumn Header="학번" DisplayMemberBinding="{Binding ClassNumber}" Width="64"/>
                        <GridViewColumn Header="이름" DisplayMemberBinding="{Binding Name}"  Width="64"/>
                        <GridViewColumn Header="상점" DisplayMemberBinding="{Binding GoodPoint}" Width="64"/>
                        <GridViewColumn Header="벌점" DisplayMemberBinding="{Binding BadPoint}" Width="64"/>
                        <GridViewColumn Header="단계" DisplayMemberBinding="{Binding PenaltyLevel}"  Width="64"/>

                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
        <Button Content="전체 선택" HorizontalAlignment="Left" Height="44" Margin="691,695,0,0" VerticalAlignment="Top" Width="120" Foreground="#FF404040" Name="All_Select_Button" FontSize="20" BorderBrush="#FFB4B4B4" Background="White" Click="All_Grade_Click" FontFamily="NanumSquare" FontWeight="Bold">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="16"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="추가" HorizontalAlignment="Left" Height="44" Margin="538,695,0,0" VerticalAlignment="Top" Width="120" Foreground="#FF404040" Name="Add_Student_Button" FontSize="20" BorderBrush="#FFB4B4B4" Background="White" Click="All_Grade_Click" FontFamily="NanumSquare" FontWeight="Bold">
