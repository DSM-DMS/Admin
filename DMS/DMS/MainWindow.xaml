                                                          VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Resources>
            <Button.Background>
                <ImageBrush ImageSource="Resources/mpoint.png" RenderOptions.BitmapScalingMode="HighQuality" Stretch="None" Opacity="0.77"/>
            </Button.Background>

        </Button>

        <Button x:Name="download_Button" HorizontalAlignment="Left" Margin="25,340,0,0" VerticalAlignment="Top" Width="143" Height="48" Foreground="{x:Null}" BorderBrush="{x:Null}" Click="download_click">

            <Button.Resources>
