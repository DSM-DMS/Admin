                        <Setter Property="CornerRadius" Value="9. 9, 0, 0" />
                    </Style>
                </ListView.Resources>
                <ListView.View>
                    <GridView AllowsColumnReorder="True">
                        <GridViewColumn Header="학번" DisplayMemberBinding="{Binding ClassNumber}" Width="164"/>
                        <GridViewColumn Header="이름" DisplayMemberBinding="{Binding Name}"  Width="164"/>
                        <GridViewColumn Header="삭제" DisplayMemberBinding="{Binding GoodPoint}" Width="164"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="347" Margin="871,408,0,0" VerticalAlignment="Top" Width="323" Background="White" CornerRadius="16">

            <ListView x:Name="SearchList_Copy1"
                Background="#ffffff"
                Margin="9.2,9.2,9.4,9.4"
                SelectionMode="Multiple"
                VerticalAlignment="Stretch"
                TextElement.FontSize="16">
                <ListView.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="BorderThickness" Value="1" />
                        <Setter Property="CornerRadius" Value="9. 9, 0, 0" />
                    </Style>
                </ListView.Resources>
                <ListView.View>
                    <GridView AllowsColumnReorder="True">
                        <GridViewColumn Header="상벌점 내역" DisplayMemberBinding="{Binding ClassNumber}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="633" Margin="1211,122,0,0" VerticalAlignment="Top" Width="297" Background="White" CornerRadius="16">

            <ListView x:Name="SearchList_Copy4"
