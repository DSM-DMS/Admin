        <Button Content="상/벌점 추가" HorizontalAlignment="Left" Height="44" Margin="1248,695,0,0" VerticalAlignment="Top" Width="120" Foreground="#FF404040" x:Name="All_Select_Button_Copy" FontSize="20" BorderBrush="#FFB4B4B4" Background="White" Click="All_Grade_Click" FontFamily="NanumSquare" FontWeight="Bold">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="16"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="리스트 수정" HorizontalAlignment="Left" Height="44" Margin="1373,695,0,0" VerticalAlignment="Top" Width="120" Foreground="#FF404040" x:Name="Add_Student_Button_Copy" FontSize="20" BorderBrush="#FFB4B4B4" Background="White" Click="All_Grade_Click" FontFamily="NanumSquare" FontWeight="Bold">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="16"/>
                </Style>
            </Button.Resources>
        </Button>
        <Canvas HorizontalAlignment="Left" Height="653" Margin="220,102,0,0" VerticalAlignment="Top" Width="1300" Name="point_canvas">
            <Border BorderThickness="1" HorizontalAlignment="Left" Height="55" VerticalAlignment="Top" Width="586" Background="#FF2F5FD2" CornerRadius="16,16,16,16" Canvas.Left="22" Canvas.Top="19"/>
            <Button Content="전체" HorizontalAlignment="Left" Height="47" VerticalAlignment="Top" Width="120" Foreground="#FF2F5FD2" x:Name="All_Grade_Button" FontSize="16" BorderBrush="{x:Null}" Background="White" Click="All_Grade_Click" Canvas.Left="26" Canvas.Top="22">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="16"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="1학년" HorizontalAlignment="Left" Height="47" VerticalAlignment="Top" Width="120" Foreground="White" x:Name="First_Grade_Button" FontSize="16" Background="#FF2F5FD2" Click="First_Grade_Click" BorderBrush="{x:Null}" Canvas.Left="177" Canvas.Top="20">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="16"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="2학년" HorizontalAlignment="Left" Height="47" VerticalAlignment="Top" Width="120" Foreground="White" x:Name="Second_Grade_Button" FontSize="16" Background="#FF2F5FD2" Click="Second_Grade_Click" BorderBrush="{x:Null}" Canvas.Left="329" Canvas.Top="20">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="16"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="3학년" HorizontalAlignment="Left" Height="47" VerticalAlignment="Top" Width="120" Foreground="White" x:Name="Third_Grade_Button" FontSize="16" Background="#FF2F5FD2" BorderBrush="{x:Null}" Click="Third_Grade_Click" Canvas.Left="478" Canvas.Top="20">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="16"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Canvas>
    </Grid>

</Window>
