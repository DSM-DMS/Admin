                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
        <ListView x:Name="SearchList_Copy3"
            Background="#ffffff"
            Margin="1129,342,400.6,368.2"
            SelectionMode="Multiple"
            VerticalAlignment="Stretch"
            TextElement.FontSize="30">
            <ListView.Resources>
                <Style TargetType="{x:Type Border}">
