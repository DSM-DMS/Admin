        <Button x:Name="notice_Button" HorizontalAlignment="Left" Margin="25,449,0,0" VerticalAlignment="Top" Width="138" Height="48" Foreground="{x:Null}" BorderBrush="{x:Null}" Click="notice_click">

            <Button.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="OverridesDefaultStyle"
                                Value="True" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border"
                                            BorderThickness="0"
